@model TechDrum.Core.ViewModels.LoginWith2FaViewModel
@{
    ViewData["Title"] = "Two-factor authentication";
}
@section Styles{
    <link rel="stylesheet" href="~/Portal/assets/css/login_register.css" />

}
<section class="container-form gird-container-full padding-customer mb-3">
    <div class="grid-container full mt-5">
        <div class="w-75 center" style="padding:0.5rem;">
            <div class="cell center" style="border: 1px solid; margin-bottom: 7rem;">
                <h2>@ViewData["Title"]</h2>
                <hr />
                <p>Your login is protected with an authenticator app. Enter your authenticator code below.</p>
                <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    <input asp-for="RememberMe" type="hidden" />
                    <input asp-for="userName" type="hidden" />
                    <input asp-for="Url" value="@ViewData["Routerurl"]" type="hidden" />
                  
                    <div class="form-group">
                        <label asp-for="TwoFactorCode"></label>
                        <input asp-for="TwoFactorCode" class="form-control w-50 center" autocomplete="off" />
                        <div asp-validation-summary="All" class="text-danger mt-3"></div>
                    </div>
                    @*<div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMachine">
                                <input asp-for="RememberMachine" />
                                @Html.DisplayNameFor(m => m.RememberMachine)
                            </label>
                        </div>
                    </div>*@
                    <div class="form-group">
                        <button type="submit" class="btn btn-default d-inline-block mt-3 w-auto " style="padding: 7px; width: 6rem !important;">Verify</button>
                    </div>
                </form>
                <p>
                    Don't have access to your authenticator device? You can
                    <a asp-action="LoginWithRecoveryCode" asp-route-returnUrl="@ViewData["ReturnUrl"],@ViewData["Routerurl"]">login with a recovery code</a>.
                </p>

            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script type="text/javascript" src="~/js/Load/Load.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}